<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Etiqueta: Nombre del dispositivo -->
    <TextView
        android:id="@+id/label_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del dispositivo"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Campo: Nombre del dispositivo -->
    <EditText
        android:id="@+id/et_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej: Sensor Patio"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/label_device_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Etiqueta: Token del dispositivo -->
    <TextView
        android:id="@+id/label_device_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token del dispositivo"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_device_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Campo: Token del dispositivo -->
    <EditText
        android:id="@+id/et_device_token"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej: abc123"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/label_device_token"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Etiqueta: Tipo de dispositivo -->
    <TextView
        android:id="@+id/label_device_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de dispositivo"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_device_token"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Spinner: Selección tipo -->
    <Spinner
        android:id="@+id/spinner_device_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_device_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Botón: Aceptar -->
    <Button
        android:id="@+id/btn_submit_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="@android:color/white"
        android:backgroundTint="#225A47"
        app:layout_constraintTop_toBottomOf="@id/spinner_device_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
