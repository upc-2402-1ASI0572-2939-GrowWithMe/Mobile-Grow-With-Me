<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/label_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinner_crop_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/et_crop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del cultivo"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/spinner_crop_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_crop_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Código"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_crop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_crop_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Área (m²)"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/et_crop_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_crop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ubicación"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_crop_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="@android:color/white"
        android:backgroundTint="#225A47"
        app:layout_constraintTop_toBottomOf="@id/et_crop_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
