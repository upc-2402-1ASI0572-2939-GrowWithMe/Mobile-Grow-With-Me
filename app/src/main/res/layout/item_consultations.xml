<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_consultation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la consulta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txt_consultation_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción breve de la consulta"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_consultation_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura: 24°C"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_consultation_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Humedad: 60%"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
