<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Selector de Fecha -->
    <EditText
        android:id="@+id/et_activity_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar fecha"
        android:focusable="false"
        android:inputType="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selector de Hora -->
    <EditText
        android:id="@+id/et_activity_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar hora"
        android:focusable="false"
        android:inputType="none"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_activity_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre del Cultivo -->
    <EditText
        android:id="@+id/et_crop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del cultivo"
        android:enabled="false"
        android:inputType="text"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_activity_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripci贸n -->
    <EditText
        android:id="@+id/et_activity_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripci贸n"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLength="150"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_crop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bot贸n Aceptar / Editar -->
    <Button
        android:id="@+id/btn_submit_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="@android:color/white"
        android:backgroundTint="#225A47"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_activity_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bot贸n Eliminar -->
    <Button
        android:id="@+id/btn_delete_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_submit_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
