<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="6dp"
            android:padding="16dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <Spinner
                    android:id="@+id/spinner_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:entries="@array/roles_array"
                    android:prompt="@string/select_role"
                    android:backgroundTint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:inputType="number"
                    android:maxLength="8"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <EditText
                    android:id="@+id/et_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Repite la contraseña"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColorHint="#2d6a4f" />

                <Button
                    android:id="@+id/btn_select_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Seleccionar Foto"
                    android:backgroundTint="#2d6a4f"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_selected_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#2d6a4f"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
