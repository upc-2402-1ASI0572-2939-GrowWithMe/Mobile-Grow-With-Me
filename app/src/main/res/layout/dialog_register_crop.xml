<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <EditText
        android:id="@+id/et_crop_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/tipo_de_cultivo"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_crop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_cultivo"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_crop_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_crop_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/area"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/et_crop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/aceptar1"
        android:textColor="@android:color/white"
        android:backgroundTint="#225A47"
        app:layout_constraintTop_toBottomOf="@id/et_crop_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
